#modal-add-comment
  form
    .author {{addCommentAndSave.currentUser.name}}:
    table.changes
      tr(ng-repeat='change in addCommentAndSave.changes')
        td.name {{change.propName}}:
        td.value(ng-if='change.text') {{change.text}}
        td.value(ng-if='!change.text') &nbsp;&nbsp;-
      tr
        td.name reason:
        td.value: textarea(cols='60' rows='3' ng-model='addCommentAndSave.reason')
      tr
        td.name &nbsp;
        td.value
          .actions
            button.save(type='submit' ng-click='addCommentAndSave.save()') Save
            button.cancel(ng-click='addCommentAndSave.cancel()') Cancel


